@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title heading-bold">Automated Teller Machine</h3>
            </div>
            <div class="panel-body">
                <form action="@Url.Content("~/Home/Dashboard")">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-credit-card-alt"></i></span>
                            <input type="password" class="form-control" name="cardNumber" placeholder="ATM Card Number"maxlength="16" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            <input type="password" class="form-control" name="pin" placeholder="Personal Identification Number" maxlength="4" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-full">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
